WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:
    FourthWindow:
    FifthWindow:
    sixthWindow:


<MainWindow>:
    name: "main"

    MDFloatLayout:
        id: box
        adaptive_size: True
        orientation: 'vertical'
        pos_hint:{'center_x': 0.5, 'center_y': 0.5}

        MDTextField:
            hint_text: "YAHAN PE CLICK KAR"
            helper_text: 'Rakhi Pe Jo chocolate Dii Thii Uska Naam Likh'
            helper_text_mode: 'on_focus'
            icon_right:"heart"
            color_mode: 'custom'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            line_color_focus: 0,0,0,1
            id: passw
            size_hint_x:None
            width:700

        MDRaisedButton:
            text: "DO NOT CLICK HERE"
            pos_hint: {'center_x': .3, 'top':.42}
            theme_text_color: 'Custom'
            text_color: 1,1,1,1
            md_bg_color: 0, 0, 0, 1
            on_release:app.dialog()

        MDRaisedButton:
            text: " CLICK HERE "
            pos_hint: {'center_x': .7, 'top':.42}
            theme_text_color: 'Custom'
            text_color: 1,1,1,1
            md_bg_color: 0, 0, 0, 1
            on_release:
                app.root.current = "third" if passw.text == "" else "main"
                root.manager.transition.direction = "up"
<SecondWindow>:
    name: "second"
    MDBoxLayout:
        pos_hint:{'center_x': 0.5, 'center_y': 0.5}
        orientation:'vertical'
        MDToolbar:
            title: 'HAPPY BIRTHDAY BRUHH'
            elevation: 10
            pos_hint: {'center_x': .5, 'center_y': .55}
            md_bg_color: get_color_from_hex(colors['DeepOrange']['A200'])
            background_palette: 'DeepOrange'
            background_hue: '700'
            left_action_items: [['hand-heart', lambda x:app.show_MDDialog()]]
            #right_action_items: [['heart', lambda x:Snackbar(text="HAPPY BIRTHDAY BRUH UR THE BEST I GOT:)").show()]]

        MDBottomNavigation:
            panel_color: .2, .2, .2, 1
            MDBottomNavigationItem:
                text: 'GEMINI'
                name: 'screen 1'
                icon: 'zodiac-gemini'
                BoxLayout:
                    orientation: "vertical"
                    #spacing: "10dp"
                    #padding: "10dp"
                    MDLabel:
                        font_style: 'H6'
                        pos_hint: {'center_x': .5}
                        halign: 'center'
                        theme_text_color: 'Custom'
                        text_color: (0, 0, 0,1)
                        text: "HAPPY BIRTHDAY BRUHHHHHHH :)"
                    MDLabel:
                        font_style: 'H6'
                        pos_hint: {'center_x': .5}
                        halign: 'center'
                        theme_text_color: 'Custom'
                        text_color: (.2, .2, .2, 1)
                        text:"ALWAYS BE ONE HAPPY BIRTHDAY BRUHHHHHHH IT HAS BEEN AN AWESOME JOURNEY AND WILL ALWAYS BE ONE"

                    MDIconButton:
                        icon: '30.jpg'
                        pos_hint: {'center_x': .5}
                        user_font_size: "100sp"
                        on_release:
                            app.call()

            MDBottomNavigationItem:
                name: 'screen'
                text: 'LEO'
                icon: 'zodiac-leo'
                BoxLayout:
                    adaptive_size: True
                    orientation:'vertical'
                    pos_hint: {'center_x': .5}
                    MDIconButton:
                        icon: "twitter"
                        user_font_size: "100sp"
                        pos_hint: {'center_x': .5}
                        on_release:
                            app.root.current = "third"
                            root.manager.transition.direction = "up"
            MDBottomNavigationItem:
                name: 'screen 4'
                text: 'CAPRICORN'
                icon: 'zodiac-capricorn'
                BoxLayout:
                    adaptive_size: True
                    orientation:'vertical'
                    pos_hint: {'center_x': .5}
                    MDIconButton:
                        icon: "whatsapp"
                        user_font_size: "170sp"
                        pos_hint: {'center_x': .5}

<ThirdWindow>:
    name: "third"
    NavigationLayout:
        ScreenManager:
            Screen:
                MDBoxLayout:
                    pos_hint:{'center_x': 0.5, 'center_y': 0.5}
                    orientation:'vertical'
                    MDToolbar:
                        title: 'HAPPY BIRTHDAY BRUHH'
                        elevation: 10
                        pos_hint:{'center_x': 0.5, 'center_y': 0.5}
                        md_bg_color: get_color_from_hex(colors['DeepOrange']['A200'])
                        background_palette: 'DeepOrange'
                        background_hue: '700'
                        left_action_items: [['menu', lambda x: nav_drawer.set_state("toggle")]]
                    MDIconButton:
                        icon: "Happy.jpg"
                        user_font_size: "100sp"
                        pos_hint:{'center_x': 0.5, 'center_y': 0.5}
                        on_release:
                            app.audio()

                    Widget:
        MDNavigationDrawer:
            id: nav_drawer
            BoxLayout:
                orientation: 'vertical'

                MDBoxLayout:

                    canvas:
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    BoxLayout:
                        id: top_box
                        size_hint_y: None
                        height: "200dp"
                        pos_hint: {"top": 1}
                        FitImage:
                            source:"30.jpg"
            Screen:
                name:"sc2"
                MDRaisedButton:
                    text: " CLICK HERE "
                    pos_hint: {'center_x': .2,'top':.35}
                    theme_text_color: 'Custom'
                    text_color: 1,1,1,1
                    md_bg_color: 0, 0, 0, 1
                    on_release:
                        app.root.current = "main"
                        root.manager.transition.direction = "down"
                MDRaisedButton:
                    text: " CLICK HERE "
                    pos_hint: {'center_x': .2, 'top':.42}
                    theme_text_color: 'Custom'
                    text_color: 1,1,1,1
                    md_bg_color: 0, 0, 0, 1
                    on_release:
                        app.root.current = "second"
                        root.manager.transition.direction = "left"
                MDRaisedButton:
                    text: " CLICK HERE "
                    pos_hint: {'center_x': .2,'top':.28}
                    theme_text_color: 'Custom'
                    text_color: 1,1,1,1
                    md_bg_color: 0, 0, 0, 1
                    on_release:
                        Snackbar(text="HAPPY BIRTHDAY BRUH UR THE BEST I GOT:)").show()