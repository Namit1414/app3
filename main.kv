#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import colors kivymd.color_definitions.colors
#:import images_path kivymd.images_path
BoxLayout:
    orientation:'vertical'
    MDToolbar:
        title: 'NAMIT'
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        md_bg_color: get_color_from_hex(colors['DeepPurple']['A400'])
        background_palette: 'DeepPurple'
        background_hue: 'A400'
        left_action_items: [[f"{images_path}kivymd_alpha.png", lambda x: x]]
        right_action_items: [['lock', lambda x: x], ['camera', lambda x: x], ['play', lambda x: x]]


    MDBottomNavigation:
        MDBottomNavigationItem:
            text: 'GEMINI'
            name: 'screen 1'
            icon: 'zodiac-gemini'
            BoxLayout:
                adaptive_size: True
                orientation: "vertical"
                #spacing: "10dp"
                #padding: "10dp"
                pos_hint: {'center_x': .5}
                MDIconButton:
                    icon: "instagram"
                    user_font_size: "70sp"
                    pos_hint: {'center_x': .5}
        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'CANCER'
            icon: 'zodiac-cancer'
            BoxLayout:
                adaptive_size: True
                orientation:'vertical'
                pos_hint: {'center_x': .5}
                MDIconButton:
                    icon: "facebook"
                    user_font_size: "50sp"
                    pos_hint: {'center_x': .5}


        MDBottomNavigationItem:
            name: 'screen'
            text: 'LEO'
            icon: 'zodiac-leo'
            BoxLayout:
                adaptive_size: True
                orientation:'vertical'
                pos_hint: {'center_x': .5}
                MDIconButton:
                    icon: "twitter"
                    user_font_size: "100sp"
                    pos_hint: {'center_x': .5}
        MDBottomNavigationItem:
            name: 'screen 4'
            text: 'CAPRICORN'
            icon: 'zodiac-capricorn'
            BoxLayout:
                adaptive_size: True
                orientation:'vertical'
                pos_hint: {'center_x': .5}
                MDIconButton:
                    icon: "whatsapp"
                    user_font_size: "340sp"
                    pos_hint: {'center_x': .5}