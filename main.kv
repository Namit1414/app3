WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:
    FourthWindow:
    FifthWindow:
    sixthWindow:


<MainWindow>:
    name: "main"

    MDBoxLayout:
        id: box
        adaptive_size: True
        orientation: 'vertical'
        pos_hint:{'center_x': 0.5, 'center_y': 0.5}

        MDTextField:
            hint_text: "YAHAN PE CLICK KAR"
            helper_text: 'Rakhi Pe Jo chocolate Dii Thii Uska Naam Likh aur sirf neeche wale Cake ko Touch Kariyo'
            helper_text_mode: 'on_focus'
            icon_right:"heart"
            color_mode: 'custom'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            line_color_focus: 0,0,0,1
            id: passw
            size_hint_x:None
            width:700




        MDIconButton:
            icon: "cake-layered"
            pos_hint: {'center_y': .5, 'center_x': .5}
            user_font_size: "50sp"
            theme_text_color: 'Custom'
            text_color: 0,0,0,1
            on_release:app.dialog()

        MDIconButton:
            icon: "cake-layered"
            user_font_size: "50sp"
            pos_hint: {'center_y': .5, 'center_x': .5}
            theme_text_color: 'Custom'
            text_color: 0,0,0,1
            on_release:
                app.root.current = "second" if passw.text == "" else "main"
                root.manager.transition.direction = "up"
<SecondWindow>:
    name: "second"
    MDBoxLayout:
        pos_hint:{'center_x': 0.5, 'center_y': 0.5}
        orientation:'vertical'
        MDToolbar:
            title: 'HAPPY BIRTHDAY BRUHH'
            elevation: 10
            pos_hint: {'center_x': .5, 'center_y': .55}
            md_bg_color: get_color_from_hex(colors['DeepOrange']['A200'])
            background_palette: 'DeepOrange'
            background_hue: '700'
            #left_action_items: [["cake-layered", lambda x:x]]
            right_action_items: [['heart', lambda x:Snackbar(text="HAPPY BIRTHDAY BRUH UR THE BEST I GOT:)").show()], ['hand-heart', lambda x:app.show_MDDialog()]]


        MDBottomNavigation:
            MDBottomNavigationItem:
                text: 'GEMINI'
                name: 'screen 1'
                icon: 'zodiac-gemini'
                BoxLayout:
                    adaptive_size: True
                    orientation: "vertical"
                    #spacing: "10dp"
                    #padding: "10dp"
                    pos_hint: {'center_x': .5}
                    MDLabel:
                        font_style: 'H5'
                        pos_hint: {'center_x': .5}
                        halign: 'center'
                        theme_text_color: 'Custom'
                        text_color: (0, 1, 0, .4)
                        text: "HAPPY BIRTHDAY BRUHHHHHHH IT HAS BEEN AN AWESOME JOURNEY AND WILL "
                    MDLabel:
                        font_style: 'H5'
                        pos_hint: {'center_x': .5}
                        halign: 'center'
                        theme_text_color: 'Custom'
                        text_color: (0, 0, 0,1)
                        text:"ALWAYS BE ONE HAPPY BIRTHDAY BRUHHHHHHH IT HAS BEEN AN AWESOME JOURNEY AND WILL ALWAYS BE ONE"

                    MDIconButton:
                        icon: '30.jpg'
                        pos_hint: {'center_x': .5}
                        user_font_size: "170sp"
                        on_release:
                            app.call()
            MDBottomNavigationItem:
                name: 'screen 2'
                text: 'CANCER'
                icon: 'zodiac-cancer'
                BoxLayout:
                    adaptive_size: True
                    orientation:'vertical'
                    pos_hint: {'center_x': .5}
                    MDIconButton:
                        icon: "Happy.jpg"
                        user_font_size: "200sp"
                        pos_hint: {'center_x': .5}
                        on_release:
                            app.audio()


            MDBottomNavigationItem:
                name: 'screen'
                text: 'LEO'
                icon: 'zodiac-leo'
                BoxLayout:
                    adaptive_size: True
                    orientation:'vertical'
                    pos_hint: {'center_x': .5}
                    MDIconButton:
                        icon: "twitter"
                        user_font_size: "100sp"
                        pos_hint: {'center_x': .5}
            MDBottomNavigationItem:
                name: 'screen 4'
                text: 'CAPRICORN'
                icon: 'zodiac-capricorn'
                BoxLayout:
                    adaptive_size: True
                    orientation:'vertical'
                    pos_hint: {'center_x': .5}
                    MDIconButton:
                        icon: "whatsapp"
                        user_font_size: "170sp"
                        pos_hint: {'center_x': .5}

